@model IEnumerable<FitnessWebApp.Models.Exercise>
@{
    ViewBag.Title = "Danh sách bài tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold text-green-700 mb-6">Danh sách bài tập</h2>
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var ex in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow hover:shadow-lg transition">
                        <div class="card-body">
                            <h5 class="card-title font-bold text-green-700">@ex.Name</h5>
                            <p class="card-text">@ex.Description</p>
                            <a href="@Url.Action("ExerciseDetails", "Home", new { id = ex.ExerciseId })" class="btn btn-success mt-2">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Chưa có bài tập nào.</div>
    }
</div> 