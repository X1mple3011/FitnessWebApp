@model IEnumerable<th.Models.TrainingPlan>

@{
    ViewBag.Title = "Lộ trình tập luyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-green-700">Danh sách lộ trình tập luyện</h2>
        @if (Session["UserId"] != null)
        {
            <a href="@Url.Action("CreatePlan", "Training")" class="btn btn-success">
                <i class="fas fa-plus"></i> Tạo lộ trình mới
            </a>
        }
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow hover:shadow-lg transition">
                        <div class="card-body">
                            <h5 class="card-title font-bold text-green-700">@plan.Name</h5>
                            <p class="card-text">@plan.Description</p>
                            <p class="text-sm text-gray-600">
                                <strong>Bắt đầu:</strong> @plan.StartDate.ToString("dd/MM/yyyy")<br />
                                <strong>Kết thúc:</strong> @plan.EndDate.ToString("dd/MM/yyyy")
                            </p>
                            <a href="@Url.Action("PlanDetails", "Training", new { id = plan.TrainingPlanId })" class="btn btn-success mt-2">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Chưa có lộ trình nào.</div>
    }
</div>