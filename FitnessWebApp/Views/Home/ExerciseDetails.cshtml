@model FitnessWebApp.Models.Exercise
@{
    ViewBag.Title = "Chi tiết bài tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mx-auto px-4 py-8">
    <div class="card shadow p-4">
        <h2 class="text-2xl font-bold text-green-700 mb-4">@Model.Name</h2>
        <p class="mb-3">@Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <div class="ratio ratio-16x9 mb-3">
                <iframe src="@Model.VideoUrl" allowfullscreen class="w-full h-64"></iframe>
            </div>
        }
        <a href="@Url.Action("Exercises", "Home")" class="btn btn-outline-success">Quay lại danh sách bài tập</a>
    </div>
</div> 