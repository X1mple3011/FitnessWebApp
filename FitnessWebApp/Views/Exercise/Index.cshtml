@model IEnumerable<th.Models.Exercise>
@{
    ViewBag.Title = "Danh sách bài tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <h2>Danh sách bài tập</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Thêm bài tập mới</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Tên bài tập</th>
                <th>Mô tả</th>
                <th>Video</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.VideoUrl))
                        {
                            <a href="@item.VideoUrl" target="_blank">Xem video</a>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.ExerciseId })" class="btn btn-info btn-sm">Chi tiết</a>
                        <a href="@Url.Action("Edit", new { id = item.ExerciseId })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.ExerciseId })" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 