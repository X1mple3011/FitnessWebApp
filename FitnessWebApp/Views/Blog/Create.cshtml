@model th.Models.BlogPost

@{
    ViewBag.Title = "Tạo bài viết mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center text-success mb-4">Tạo bài viết mới</h3>

                    @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mb-3">
                            <label for="Title" class="form-label">Tiêu đề</label>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                            <div class="invalid-feedback">
                                Vui lòng nhập tiêu đề
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Content" class="form-label">Nội dung</label>
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "10", required = "required" })
                            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                            <div class="invalid-feedback">
                                Vui lòng nhập nội dung
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="ImageUrl" class="form-label">Link ảnh</label>
                            @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", type = "url" })
                            @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Đăng bài</button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Quay lại</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
} 