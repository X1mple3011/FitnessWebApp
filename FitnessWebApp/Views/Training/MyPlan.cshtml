@model IEnumerable<th.Models.TrainingPlan>

@{
    ViewBag.Title = "Lộ trình của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Lộ trình của tôi</h2>
        <a href="@Url.Action("CreatePlan")" class="btn btn-success">
            <i class="fas fa-plus"></i> Tạo lộ trình mới
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Bạn chưa có lộ trình nào. Hãy tạo lộ trình mới để bắt đầu tập luyện!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@plan.Name</h5>
                            <p class="card-text">@plan.Description</p>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> Từ @plan.StartDate.ToString("dd/MM/yyyy") đến @plan.EndDate.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-dumbbell"></i> @plan.TrainingDays.Count bài tập
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("PlanDetails", new { id = plan.TrainingPlanId })" class="btn btn-success">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                                @if (plan.TrainingDays != null && plan.TrainingDays.Any())
                                {
                                    <a href="@Url.Action("AddExerciseToDay", new { dayId = plan.TrainingDays.First().TrainingDayId })" class="btn btn-outline-success">
                                        <i class="fas fa-plus"></i> Thêm bài tập
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 